<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Manage" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="vexpand">true</property>
    <property name="margin-top">64</property>
    <property name="margin-bottom">16</property>
    <property name="margin-start">32</property>
    <property name="margin-end">32</property>
    <child>
      <object class="AdwPreferencesGroup" id="app_list">
        <property name="margin-start">32</property>
        <property name="margin-end">32</property>
        <property name="vexpand">true</property>
        <property name="valign">start</property>
        <property name="title">User apps</property>
        <property name="description">Installed using Shortcut</property>
        <child type="header-suffix">
          <object class="GtkBox">
            <property name="valign">center</property>
            <property name="spacing">8</property>
            <child>
              <object class="GtkLabel">
                <property name="label">All</property>
              </object>
            </child>
            <child>
              <object class="GtkSwitch" id="show_all_switch">
                <property name="action-name">toggle_show_all</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkGrid">
        <property name="valign">end</property>
        <property name="column-homogeneous">true</property>
        <style>
          <class name="toolbar"/>
          <class name="osd"/>
        </style>
        <child>
          <object class="GtkButton">
            <property name="use-underline">true</property>
            <property name="label">_Back</property>
            <property name="action-name">back</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <style>
              <class name="spacer" />
            </style>
            <layout>
              <property name="column">1</property>
              <property name="column-span">3</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>